<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Follows • Jam Journal</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"/>
  <link rel="stylesheet" href="/css/style.css"/>
</head>

<body class="bg-light">

  <%- include('partials/nav') %>

  <main class="container py-4">

    <!-- Page header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h3 mb-1">Friends & Follows</h1>
        <p class="text-muted mb-0">
          See who you're connected with on Jam Journal.
        </p>
      </div>
      <a href="/profile" class="btn btn-outline-light border-0 text-primary fw-semibold">
        ← Back to Profile
      </a>
    </div>

    <!-- User search -->
    <section class="mb-4">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body">
          <h2 class="h5 mb-3">Find users</h2>

          <form class="row g-2" method="get" action="/follows">
            <div class="col-12 col-md-9">
              <input
                type="text"
                class="form-control"
                name="q"
                placeholder="Search by username…"
                value="<%= searchTerm || '' %>"
              >
            </div>
            <div class="col-12 col-md-3 d-grid">
              <button type="submit" class="btn btn-primary">
                Search
              </button>
            </div>
          </form>

          <% if (searchTerm && searchResults && searchResults.length === 0) { %>
            <p class="mt-3 text-muted">
              No users found matching "<span class="fw-semibold"><%= searchTerm %></span>".
            </p>
          <% } %>

          <% if (searchResults && searchResults.length > 0) { %>
            <div class="mt-3">
              <p class="text-muted small mb-2">
                Search results (<%= searchResults.length %>)
              </p>

              <% searchResults.forEach(u => { %>
                <div class="d-flex justify-content-between align-items-center p-2 mb-2 rounded-3 border bg-white">
                  <div>
                    <span class="fw-semibold">@<%= u.username %></span>
                  </div>

                  <% if (u.you_already_follow) { %>
                    <form method="post" action="/follows/remove" class="m-0">
                      <input type="hidden" name="targetId" value="<%= u.id %>">
                      <button class="btn btn-outline-danger btn-sm" type="submit">
                        Unfollow
                      </button>
                    </form>
                  <% } else { %>
                    <form method="post" action="/follows/add" class="m-0">
                      <input type="hidden" name="targetId" value="<%= u.id %>">
                      <button class="btn btn-outline-primary btn-sm" type="submit">
                        Follow
                      </button>
                    </form>
                  <% } %>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Two-column layout: Following / Followers -->
    <section class="row g-4">

      <!-- LEFT: Following -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h2 class="h5 mb-0">Following</h2>
              <span class="badge bg-primary-subtle text-primary">
                <%= following ? following.length : 0 %>
              </span>
            </div>

            <% if (!following || following.length === 0) { %>
              <p class="text-muted mt-2">
                You're not following anyone yet. Try searching for a friend above!
              </p>
            <% } else { %>
              <div class="list-group list-group-flush">
                <% following.forEach(f => { %>
                  <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <div>
                      <div class="fw-semibold">@<%= f.username %></div>
                      <div class="text-muted small">
                        Since <time datetime="<%= f.createdISO %>"><%= f.createdHuman %></time>
                      </div>
                    </div>
                    <form method="post" action="/follows/remove" class="m-0">
                      <input type="hidden" name="targetId" value="<%= f.id %>">
                      <button class="btn btn-outline-danger btn-sm" type="submit">
                        Unfollow
                      </button>
                    </form>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- RIGHT: Followers -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h2 class="h5 mb-0">Followers</h2>
              <span class="badge bg-primary-subtle text-primary">
                <%= followers ? followers.length : 0 %>
              </span>
            </div>

            <% if (!followers || followers.length === 0) { %>
              <p class="text-muted mt-2">
                No one follows you yet. Share your favorite songs to attract friends!
              </p>
            <% } else { %>
              <div class="list-group list-group-flush">
                <% followers.forEach(f => { %>
                  <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <div>
                      <div class="fw-semibold">@<%= f.username %></div>
                      <div class="text-muted small">
                        Since <time datetime="<%= f.createdISO %>"><%= f.createdHuman %></time>                      </div>
                    </div>

                    <% if (f.you_follow_them) { %>
                      <button class="btn btn-outline-secondary btn-sm" disabled>
                        Following
                      </button>
                    <% } else { %>
                      <form method="post" action="/follows/add" class="m-0">
                        <input type="hidden" name="targetId" value="<%= f.id %>">
                        <button class="btn btn-outline-primary btn-sm" type="submit">
                          Follow back
                        </button>
                      </form>
                    <% } %>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>
        </div>
      </div>

    </section>
  </main>
  <%- include('partials/footer') %>

</body>
</html>