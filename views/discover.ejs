<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Discovery</title>
</head>
<body>
    <%- include('partials/nav') %>

    <h1>Discover New Music!</h1>
    <p>Explore 10 random songs from 8 genres!</p>

    <% discoverData.forEach(function(category) { %>
        <% if(category.songs && category.songs.length > 0) { %>
            <div class="mb-5">
                <h3 class="text-primary border-bottom pb-2 mb-3"><%= category.genre %></h3>
                <div class="scrolling-wrapper">
                    <% category.songs.forEach(function(track) { %>
                        <div class="card song-card h-100 shadow-sm">
                            <img src="<%= track.artworkUrl100 %>" class="card-img-top" alt="Album Art">
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title text-truncate" title="<%= track.trackName %>"><%= track.trackName %></h6>
                                <p class="card-text small text-muted text-truncate mb-2"><%= track.artistName %></p>
                                <% if (track.previewUrl) { %>
                                    <audio controls class="w-100 mt-auto mb-2" style="height: 30px;">
                                        <source src="<%= track.previewUrl %>" type="audio/mpeg">
                                    </audio>
                                <% } %>
                                <a href="<%= track.trackViewUrl %>" target="_blank" class="btn btn-sm btn-outline-secondary mt-1">View on iTunes</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    <% }); %>
    <%- include('partials/footer') %>
</body>
</html>