<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css" />
  <title>Your Profile</title>
</head>

<body>
  <%- include('partials/nav') %>

    <main class="container my-4">

      <h1 class="mb-4">Profile</h1>

      <br>

      <ul>
        <li>Username: <%= user.username %>
        </li>
        <li>User id: <%= user.id %>
        </li>
        <li>Date joined: <%= user.date_joined %>
        </li>
      </ul>

      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePassword">
        Change Password</button>


      <br>

      <h1 class="mb-4">Follows</h1>

      Anything?

      <br><br>

      <form action="/deleteAccount" method="POST"
        onsubmit="return confirm('Are you sure you want to delete your account?');">
        <button type="submit" class="btn btn-danger">Delete Account</button>
      </form>

      <!-- ===== change password MODAL ===== -->
      <div class="modal fade" id="changePassword" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Change Password</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/changePassword" method="post" class="row g-3">
                <div class="col-12 col-md-6">
                  <label class="form-label">Current Password</label>
                  <input type="password" name="cPassword" class="form-control" required />
                </div>

                <div class="col-12"></div> 

                <div class="col-12 col-md-6">
                  <label class="form-label">New PassWord</label>
                  <input type="password" name="nPassword" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary">Change</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
</body>

</html>