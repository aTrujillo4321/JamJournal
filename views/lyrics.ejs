<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/style.css" />
  <title>Lyrics Search</title>
</head>
<body>
    <%- include('partials/nav') %>

<main class="container my-4">

    <h1 class="mb-4">Search for Lyrics</h1>

    <form method="get" action="/lyrics" class="row g-3 mb-4">
        <div class="col-md-6">
            <label class="form-label">Artist</label>
            <input name="artist" class="form-control" required value="<%=artist%>">
        </div>

         <div class="col-md-6">
            <label class="form-label">Song Title</label>
            <input name="title" class="form-control" required value="<%= title %>">
         </div>

         <div class="col-12">
            <button class="btn btn-primary">Search</button>
         </div>
    </form>

    <% if (error) {%>
        <div class="alert alert-danger"><%= error %></div>
   <% } %>

   <% if (lyrics){%>
    <h3>Lyrics</h3>
    <pre class="p-3 border rounded bg-light" style="white-space: pre-wrap;"><%=lyrics%></pre>
  <% } %>

  <!-- lyrics -->
</main>

    <%- include('partials/footer') %>
</body>
</html>